<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_category"
    app:startDestination="@id/nav_category_list">

    <fragment
        android:id="@+id/nav_category_list"
        android:name="com.yizhenwind.rocket.feature.category.ui.CategoryListFragment"
        android:label="@string/label_category_list"
        tools:layout="@layout/fragment_base_list">

        <action
            android:id="@+id/action_category_list_to_create_category"
            app:destination="@id/nav_create_category"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_create_category"
        android:name="com.yizhenwind.rocket.feature.category.ui.create.CreateCategoryFragment"
        android:label="@string/label_create_category"
        tools:layout="@layout/fragment_create_category" />

</navigation>