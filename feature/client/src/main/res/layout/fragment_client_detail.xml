<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yizhenwind.rocket.core.framework.widget.TwoLineTextView
        android:id="@+id/tltv_client_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.Rocket.ClickableItem"
        app:tltv_title="@string/client_detail_name" />

    <com.yizhenwind.rocket.core.framework.widget.TwoLineTextView
        android:id="@+id/tltv_client_detail_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.Rocket.ClickableItem"
        app:tltv_title="@string/client_detail_contact" />

    <com.yizhenwind.rocket.core.framework.widget.TwoLineTextView
        android:id="@+id/tltv_client_detail_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.Rocket.ClickableItem"
        app:tltv_title="@string/client_detail_remark" />

    <com.yizhenwind.rocket.core.framework.widget.TwoLineTextView
        android:id="@+id/tltv_client_detail_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.Rocket.ClickableItem"
        app:tltv_title="@string/client_detail_create_time" />

</LinearLayout>