<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Rocket.ClickableItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_character_sect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_content_margin"
        android:layout_marginTop="@dimen/item_content_margin"
        android:textColor="@color/color_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="苍云" />

    <TextView
        android:id="@+id/tv_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_content_margin"
        android:layout_marginEnd="@dimen/item_content_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_character_sect"
        app:layout_constraintEnd_toStartOf="@id/tv_character_zone"
        app:layout_constraintStart_toEndOf="@id/tv_character_sect"
        tools:text="宇文长卿" />

    <TextView
        android:id="@+id/tv_character_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_character_name"
        app:layout_constraintEnd_toStartOf="@id/tv_character_server"
        tools:text="电信五区" />

    <TextView
        android:id="@+id/tv_character_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_content_margin"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_character_zone"
        app:layout_constraintEnd_toStartOf="@id/ib_character_action"
        tools:text="唯我独尊" />

    <TextView
        android:id="@+id/tv_character_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_content_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/item_content_margin"
        android:layout_marginBottom="@dimen/item_content_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_character_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_character_name"
        tools:text="@tools:sample/lorem/random" />

    <ImageButton
        android:id="@+id/ib_character_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/item_content_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_round_more_vert_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorControlNormal" />

</androidx.constraintlayout.widget.ConstraintLayout>