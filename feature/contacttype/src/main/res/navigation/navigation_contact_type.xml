<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_contact_type"
    app:startDestination="@id/nav_contact_type_list">

    <fragment
        android:id="@+id/nav_contact_type_list"
        android:name="com.yizhenwind.rocket.feature.contacttype.ui.ContactTypeListFragment"
        android:label="@string/label_contact_type"
        tools:layout="@layout/fragment_base_list">

        <deepLink app:uri="rocket://contactType/list" />

        <action
            android:id="@+id/action_to_create_contact_type"
            app:destination="@id/nav_create_contact_type"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_create_contact_type"
        android:name="com.yizhenwind.rocket.feature.contacttype.ui.create.CreateContactTypeFragment"
        android:label="@string/label_create_contact_type"
        tools:layout="@layout/fragment_create_contact_type" />

</navigation>