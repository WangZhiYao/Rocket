<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.yizhenwind.rocket.feature.home.ui.HomeFragment"
        android:label="@string/home_label"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_client_profile"
        android:name="com.yizhenwind.rocket.ui.client.ClientProfileFragment"
        android:label="@string/client_profile_label"
        tools:layout="@layout/fragment_client_profile">

        <action
            android:id="@+id/action_client_profile_to_create_client"
            app:destination="@id/nav_create_client"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_user"
        android:name="com.yizhenwind.rocket.feature.user.ui.UserFragment"
        android:label="@string/user_label"
        tools:layout="@layout/fragment_user" />

    <activity
        android:id="@+id/nav_create_client"
        android:name="com.yizhenwind.rocket.feature.client.ui.create.CreateClientActivity"
        tools:layout="@layout/activity_base_nav" />

    <activity
        android:id="@+id/nav_client_composite"
        android:name="com.yizhenwind.rocket.feature.client.ui.composite.ClientCompositeActivity"
        tools:layout="@layout/activity_client_composite">

        <argument
            android:name="clientId"
            android:defaultValue="0L"
            app:argType="long"
            app:nullable="false" />
    </activity>

    <action
        android:id="@+id/action_to_client_composite"
        app:destination="@id/nav_client_composite"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

</navigation>