<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/tv_simple_character_sect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_content_margin"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="苍云" />

    <TextView
        android:id="@+id/tv_simple_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_content_margin"
        android:layout_marginEnd="@dimen/item_content_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_simple_character_sect"
        app:layout_constraintEnd_toStartOf="@id/tv_simple_character_zone"
        app:layout_constraintStart_toEndOf="@id/tv_simple_character_sect"
        tools:text="宇文长卿" />

    <TextView
        android:id="@+id/tv_simple_character_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_simple_character_name"
        app:layout_constraintEnd_toStartOf="@id/tv_simple_character_server"
        tools:text="电信五区" />

    <TextView
        android:id="@+id/tv_simple_character_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_content_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_simple_character_zone"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="唯我独尊" />

</androidx.constraintlayout.widget.ConstraintLayout>